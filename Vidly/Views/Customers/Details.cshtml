@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<p>Membership Type: @Model.MembershipType.Name</p>

@if (Model.Birthday.HasValue)
{
    <p>Birthdate: @Model.Birthday.Value.ToShortDateString()</p>
}

